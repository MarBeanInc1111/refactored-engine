def add_numbers(num1: float or int, num2: float or int) -> float or int:
    """
    This function adds two numbers (either integers or floats) and returns the result.

    Parameters:
    num1 (float or int): The first number to be added.
    num2 (float or int): The second number to be added.

    Returns:
    float or int: The sum of num1 and num2.
    """
    return num1 + num2
